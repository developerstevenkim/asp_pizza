@model IEnumerable<Avesdo.Models.Orders>

@{
    ViewData["Title"] = "Index";
}

<h1>Order</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.Raw("Pizza")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Customer_name)
            </td>
            <td>
                @for (var i = 0; i < item.OrdPizs.Count; i++)
                {
                    @Html.Raw("Pizza ID: ")
                    @Html.DisplayFor(modelItem=>item.OrdPizs[i].PizzaId, "MyTemplate")
                    @Html.Raw(", Quantity: ")
                    @Html.DisplayFor(modelItem=>item.OrdPizs[i].Quantity, "MyTemplate")
                    @Html.Raw("<br>")
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
